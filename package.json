{
  "name": "@muhammedaksam/interactive-card",
  "version": "1.0.3",
  "type": "module",
  "description": "A beautiful, interactive payment card component for React applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "dist/style.css",
    "!dist/**/*.stories.*",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc --project tsconfig.build.json && vite build --mode lib",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:storybook": "test-storybook",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run test:run && pnpm run build:lib",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check-all": "pnpm run lint && pnpm run format:check && pnpm run test",
    "version:show": "npx tsx scripts/version-helper.ts show",
    "version:update": "npx tsx scripts/version-helper.ts update",
    "version:bump": "npx tsx scripts/version-helper.ts update"
  },
  "keywords": [
    "react",
    "payment",
    "card",
    "credit-card",
    "interactive",
    "component",
    "ui"
  ],
  "author": "Muhammed Mustafa AKÅžAM <info@muhammedaksam.com.tr> (https://github.com/muhammedaksam)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammedaksam/interactive-card.git"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-essentials": "~8.6.14",
    "@storybook/addon-interactions": "~8.6.14",
    "@storybook/addon-links": "~8.6.14",
    "@storybook/blocks": "~8.6.14",
    "@storybook/react": "~8.6.14",
    "@storybook/react-vite": "~8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^0.9.0",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "storybook": "~8.6.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
